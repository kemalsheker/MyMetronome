<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape
            android:shape="line">
            <stroke
                android:width="2dp"/>
            <solid
                android:color="@color/black"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="line">
                <stroke
                    android:width="2dp"/>
                <solid
                    android:color="@color/purple_200"/>
            </shape>
        </clip>
    </item>

</layer-list>